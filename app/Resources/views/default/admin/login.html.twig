{% extends '::base.html.twig' %}
{% trans_default_domain 'login' %}

{% block main_title %}
    Admin Login
{% endblock main_title %}

{% block page_title %} Admin Login {% endblock page_title %}

{% block form_error_messages %}
    {% if error %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
{% endblock form_error_messages %}

{% block main_content_1col_form %}
    <form action="{{ path("cls_user_admin_security_check") }}" method="post" class="mainForm">
        {% if error %}
            <div class="alert alert-error">{{ error|trans({}, 'SonataUserBundle') }}</div>
        {% endif %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }} <span>*</span></label>
            <input type="text" placeholder="Username" class="form-control input-lg" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }} <span>*</span></label>
            <input type="password" placeholder="Password" class="form-control input-lg" id="password" name="_password" required="required" />
        </div>
        <div class="checkbox">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
        </div>
        <div class="form-group text-center">
            <input class="btn btn-savePass" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </form>
{% endblock main_content_1col_form %}


















